<UserControl x:Class="AustinXPowerBot.Desktop.Pages.ClaimBonusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style x:Key="DarkClaimBonusComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBg2Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PanelBgBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="18">
            <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
            <TextBlock Text="Claim Bonus" FontSize="26" FontWeight="SemiBold" />
            <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,16,0,0">
                <StackPanel>
                    <TextBlock Text="Submit bonus details to start claim processing." Style="{StaticResource MutedText}"/>

                    <TextBlock Text="Bonus Code" Style="{StaticResource MutedText}" Margin="0,14,0,4"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding BonusCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="10,8"/>
                        <Button Grid.Column="1"
                            Content="Generate Code"
                            Margin="10,0,0,0"
                            Background="{StaticResource PanelBgBrush}"
                            BorderThickness="0"
                            Padding="14,10"
                            Command="{Binding GenerateBonusCodeCommand}"/>
                    </Grid>

                    <TextBlock Text="Bonus Type" Style="{StaticResource MutedText}" Margin="0,12,0,4"/>
                    <ComboBox Style="{StaticResource DarkClaimBonusComboBox}"
                              SelectedValue="{Binding SelectedBonusType, Mode=TwoWay}"
                              SelectedValuePath="Content"
                              Padding="8,6"
                              IsEnabled="False">
                        <ComboBoxItem Content="Welcome Bonus"/>
                    </ComboBox>

                    <TextBlock Text="Broker Account UID" Style="{StaticResource MutedText}" Margin="0,12,0,4"/>
                    <TextBox Text="{Binding BrokerUid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Padding="10,8"/>

                    <WrapPanel Margin="0,14,0,0">
                        <Button Content="Claim Bonus" Style="{StaticResource PrimaryButton}" Margin="0,0,10,10"
                                Command="{Binding ClaimBonusCommand}"/>
                        <Button Content="Reset" Background="{StaticResource PanelBgBrush}" BorderThickness="0" Padding="14,10" Margin="0,0,0,10"
                                Command="{Binding ResetCommand}"/>
                    </WrapPanel>

                    <TextBlock Text="{Binding Status}" Style="{StaticResource MutedText}" Margin="0,6,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
