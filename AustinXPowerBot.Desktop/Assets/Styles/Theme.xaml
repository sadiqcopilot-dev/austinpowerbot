<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="AppBg">#0E1624</Color>
    <Color x:Key="PanelBg">#121C2E</Color>
    <Color x:Key="PanelBg2">#0F1A2A</Color>
    <Color x:Key="TextPrimary">#EAF0FF</Color>
    <Color x:Key="TextMuted">#9FB0D0</Color>
    <Color x:Key="Accent">#2D7DFF</Color>
    <Color x:Key="Success">#27C07D</Color>
    <Color x:Key="Danger">#E24A4A</Color>

    <SolidColorBrush x:Key="AppBgBrush" Color="{StaticResource AppBg}" />
    <SolidColorBrush x:Key="PanelBgBrush" Color="{StaticResource PanelBg}" />
    <SolidColorBrush x:Key="PanelBg2Brush" Color="{StaticResource PanelBg2}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}" />

    <!-- Common -->
    <CornerRadius x:Key="CardRadius">10</CornerRadius>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
    </Style>

    <Style x:Key="MutedText" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}" />
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PanelBgBrush}" />
        <Setter Property="CornerRadius" Value="{StaticResource CardRadius}" />
        <Setter Property="Padding" Value="14" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource DangerBrush}" />
    </Style>

</ResourceDictionary>
