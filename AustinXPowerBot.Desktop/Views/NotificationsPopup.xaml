<Window x:Class="AustinXPowerBot.Desktop.Views.NotificationsPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        Width="320"
        Height="100">
    <Border Background="#FF1E1E1E" CornerRadius="8" Padding="12" Opacity="0.95">
        <StackPanel>
            <TextBlock x:Name="TitleBlock" Foreground="White" FontWeight="Bold" FontSize="14" TextWrapping="Wrap" />
            <TextBlock x:Name="MessageBlock" Foreground="White" Margin="0,6,0,0" TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
