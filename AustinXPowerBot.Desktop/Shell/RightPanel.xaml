<UserControl x:Class="AustinXPowerBot.Desktop.Shell.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Background="{StaticResource PanelBg2Brush}" Padding="12">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel IsEnabled="{Binding IsAppUnlocked}">

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Live Logs" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="• (placeholder) Browser started" Style="{StaticResource MutedText}" Margin="0,8,0,0"/>
                        <TextBlock Text="• (placeholder) Logged in detected" Style="{StaticResource MutedText}"/>
                        <TextBlock Text="• (placeholder) Signal received" Style="{StaticResource MutedText}"/>
                        <Button Content="Clear" HorizontalAlignment="Right" Margin="0,10,0,0" Background="{StaticResource PanelBgBrush}" BorderThickness="0" />
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Signal Feed" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="EUR/USD • BUY • Strong" Style="{StaticResource MutedText}" Margin="0,8,0,0"/>
                        <TextBlock Text="GBP/JPY • SELL • Medium" Style="{StaticResource MutedText}"/>
                        <TextBlock Text="AUD/USD • BUY • Strong" Style="{StaticResource MutedText}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Quick Actions" FontWeight="SemiBold" FontSize="14" />
                        <Button Content="Start AutoTrade" Style="{StaticResource PrimaryButton}" Margin="0,10,0,8"/>
                        <Button Content="Stop All" Style="{StaticResource DangerButton}" Margin="0,0,0,8"/>
                        <Button Content="Open Browser" Background="{StaticResource PanelBgBrush}" BorderThickness="0" Padding="14,10" Margin="0,0,0,8"/>
                        <Button Content="Telegram Control" Background="{StaticResource PanelBgBrush}" BorderThickness="0" Padding="14,10"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource Card}">
                    <StackPanel>
                        <TextBlock Text="Account Snapshot" FontWeight="SemiBold" FontSize="14" />
                        <TextBlock Text="Balance: ₦0.00" Style="{StaticResource MutedText}" Margin="0,8,0,0"/>
                        <TextBlock Text="Today's Profit: ₦0.00" Style="{StaticResource MutedText}" />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
